
@{
    ViewBag.Title = "ForgetPass";
   Layout = "~/Views/Shared/_Layout.cshtml";
}
<body>
    <div class="main">
        <form action="" method="POST" class="form" id="form-login">
            <h2 class="heading">Quên mật khẩu</h2>
            <p class="text-info"> Nhập email để được cấp lại mật khẩu mới</p>
            <div class="spacer"></div>
            <div class="form-group">
                <label for="email" class="form-label">Email</label>
                <input id="email" name="email" type="text" placeholder="Nhập email" class="form-control">
                <span class="form-message"></span>
            </div>
            <button class="form-submit btn-submit">Gửi mật khẩu mới </button>
            <div class="backtologin">
                <a href="#" class="backtologin">@Html.ActionLink("Quay lại trang đăng nhập", "Login", "Home")</a>
            </div>
        </form>
    </div>
    <script src="~/Scripts/Forgetpass.js"></script>
</body>
