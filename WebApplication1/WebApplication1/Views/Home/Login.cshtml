
@*@{
    ViewBag.Title = "Login";
}*@

<body>
    <div class="main">
        <form action="" method="POST" class="form" id="form-login">
            <h2 class="heading">Đăng nhập</h2>
            <div class="spacer"></div>
            <div class="form-group ">
                <label for="fullname" class="form-label">Tên đăng nhập</label>
                <input id="fullname" name="fullname" type="text" placeholder="Nhập tên đăng nhập" class="form-control">
                <span class="form-message"></span><!--xuất hiện khi lỗi-->
            </div>
            <div class="form-group">
                <label for="password" class="form-label">Mật khẩu</label>
                <input id="password" name="password" type="password" placeholder="Nhập mật khẩu" class="form-control">
                <span class="form-message"></span>
            </div>
            <div class=" forgetpass">
                <a href="#" class="forgetpass">@Html.ActionLink("Quên mật khẩu?", "Forgetpass","Home")</a>
            </div>
            <button class="form-submit btn-submit">Đăng nhập</button>
        </form>
    </div>
    <script src="~/Scripts/Login.js"></script>
</body>

